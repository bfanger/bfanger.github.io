{
  "name": "bfanger-nl",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "deploy": "rimraf build && yarn build && git-directory-deploy --branch gh-pages --directory build/",
    "preview": "vite preview",
    "lint": "svelte-kit sync && concurrently -c \"#c596c7\",\"#676778\",\"#4b32c3\",\"#fafafa\" --kill-others-on-fail \"npm:lint:*\"",
    "lint:prettier": "prettier --check .",
    "lint:svelte-check": "svelte-check",
    "lint:eslint": "eslint --max-warnings=0",
    "lint:stylelint": "stylelint --max-warnings=0 \"src/**/*.{css,svelte}\"",
    "format": "eslint --fix && stylelint --fix \"src/**/*.{css,svelte}\" && prettier --write .",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,svelte}": [
      "svelte-check"
    ],
    "*.{ts,svelte,js,cjs,mjs}": [
      "eslint --max-warnings 0 --no-ignore"
    ],
    "*.{ts,js,svelte,css,json,html}": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.0.9",
    "@types/three": "^0.182.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-svelte": "^3.14.0",
    "git-directory-deploy": "^1.5.1",
    "globals": "^17.0.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "image-size": "^2.0.2",
    "lint-staged": "^16.2.7",
    "lodash-es": "^4.17.22",
    "marked": "^17.0.1",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.1",
    "postcss-preset-env": "^11.1.1",
    "prettier": "^3.8.0",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rimraf": "^6.1.2",
    "stylelint": "^17.0.0",
    "stylelint-config-clean-order": "^8.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-prettier": "^5.0.3",
    "svelte": "^5.46.4",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^4.1.18",
    "three": "^0.182.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "zod": "^4.3.5"
  },
  "engines": {
    "node": ">= 22"
  }
}
