{
  "name": "svelte-project-template",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "deploy": "rimraf build && yarn build && ./githubify.js && git-directory-deploy --branch gh-pages --directory build/",
    "preview": "svelte-kit preview",
    "lint": "concurrently --kill-others-on-fail \"yarn:lint:*\"",
    "lint:prettier": "prettier --check --loglevel=warn \"src/**/*.svelte\"",
    "lint:svelte-check": "svelte-check --fail-on-warnings --fail-on-hints",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint --ext=js,ts,svelte --max-warnings=0 src",
    "format": "prettier --write . && eslint --ext=js,ts,svelte --fix src",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --max-warnings 0 --ext ts,tsx --no-ignore",
      "sh -c 'tsc -p tsconfig.json --noEmit'"
    ],
    "*.js": [
      "eslint --max-warnings 0 --ext js --no-ignore"
    ],
    "*.svelte": [
      "eslint --max-warnings 0 --ext svelte --no-ignore",
      "svelte-check --fail-on-warnings --fail-on-hints",
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "@types/lodash-es": "^4.17.5",
    "@types/marked": "^4.0.1",
    "@types/three": "^0.136.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "concurrently": "^7.0.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-triple": "^0.0.8",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "prettier-plugin-svelte": "^2.4.0",
    "sass": "^1.42.1",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.5",
    "typescript": "^4.4.4",
    "vite": "^2.5.10"
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "git-directory-deploy": "^1.5.1",
    "gray-matter": "^4.0.3",
    "husky": "^7.0.4",
    "image-size": "^1.0.0",
    "lodash-es": "^4.17.21",
    "marked": "^4.0.10",
    "svelte": "^3.46.2",
    "three": "^0.136.0"
  }
}
