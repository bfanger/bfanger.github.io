{
  "name": "bfanger-nl",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "deploy": "rimraf build && yarn build && git-directory-deploy --branch gh-pages --directory build/",
    "preview": "vite preview",
    "lint": "svelte-kit sync && concurrently --kill-others-on-fail \"yarn:lint:*\"",
    "lint:prettier": "prettier --check \"src/**/*.svelte\"",
    "lint:svelte-check": "svelte-check --fail-on-warnings",
    "lint:eslint": "eslint --ext=js,ts,svelte --max-warnings=0 src",
    "format": "prettier --write . && eslint --ext=js,ts,svelte --fix src",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,svelte}": [
      "svelte-check --fail-on-warnings"
    ],
    "*.{ts,svelte,js,cjs,mjs}": [
      "eslint --max-warnings 0 --no-ignore"
    ],
    "*.{ts,js,svelte,css,scss,json,html}": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.4.3",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.6",
    "@types/three": "^0.160.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-triple": "^1.1.5",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.35.1",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prettier-plugin-svelte": "^3.1.2",
    "rimraf": "^5.0.5",
    "sass": "^1.70.0",
    "svelte-check": "^3.6.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "git-directory-deploy": "^1.5.1",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.3",
    "image-size": "^1.1.1",
    "lodash-es": "^4.17.21",
    "marked": "^11.1.1",
    "postcss-preset-env": "^9.3.0",
    "svelte": "^4.2.9",
    "three": "^0.160.1"
  }
}
