{
  "name": "bfanger.nl",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "dev": "HOST=0.0.0.0 PORT=8080 nuxt",
    "build": "nuxt generate && ./tasks/static-api.js",
    "lint": "eslint --ext .js,.vue --max-warnings 0 --ignore-path .gitignore .",
    "optimize-images": "./tasks/optimize-images.js",
    "deploy": "./tasks/deploy.js",
    "debug-api": "pm2-dev api/index.js"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "jest": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "esnext",
      "plugin:vue/recommended",
      "@vue/prettier"
    ],
    "plugins": [
      "vue",
      "only-warn"
    ],
    "globals": {
      "process": true
    }
  },
  "devDependencies": {
    "@nuxtjs/sitemap": "^0.2.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "ascii-progress": "^1.0.5",
    "babel-eslint": "^10.0.1",
    "batch-promises": "^0.0.3",
    "eslint": "^5.1.0",
    "eslint-config-esnext": "^4.0.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-only-warn": "^1.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-vue": "^5.1.0",
    "imagemin": "^6.0.0",
    "imagemin-jpegoptim": "^6.0.0",
    "imagemin-pngquant": "^7.0.0",
    "node-fetch": "^2.1.2",
    "node-sass": "^4.9.2",
    "nuxt": "^2.3.4",
    "prettier": "^1.13.7",
    "sass-loader": "^7.0.3"
  },
  "dependencies": {
    "commonmark": "^0.28.1",
    "gray-matter": "^4.0.1",
    "image-size": "^0.7.1",
    "lodash": "^4.17.5"
  },
  "peerDependencies": {
    "vue": "^2.5.13",
    "vuex": "^3.0.1"
  }
}
