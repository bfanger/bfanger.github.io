{
  "name": "bfanger.nl",
  "private": true,
  "scripts": {
    "dev": "sapper dev --no-hot",
    "lint": "tsc --noEmit && svelte-check && eslint --max-warnings=0 src",
    "test": "npm run lint",
    "deploy": "sapper export --no-subfolders --entry '/404' && push-dir --dir __sapper__/export --branch=master",
    "postinstall": "sed -i -e 's/interopNamespace(EventEmitter);/interopNamespace(EventEmitter).default;/' node_modules/sapper/dist/CheapWatch.es.js"
  },
  "prettier": {
    "semi": false
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "corejs": 3,
          "useBuiltIns": "entry"
        }
      ],
      "@babel/typescript"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "babel-loader": "^8.1.0",
    "compression": "^1.7.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.10.3",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.10.3",
    "@tsconfig/svelte": "^1.0.10",
    "@types/commonmark": "^0.27.4",
    "@types/express": "^4.17.7",
    "@types/lodash": "^4.14.159",
    "@types/node": "^14.0.27",
    "autoprefixer": "^9.8.4",
    "babel-eslint": "^10.1.0",
    "commonmark": "^0.29.1",
    "core-js": "^3.6.5",
    "eslint": "^7.3.1",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "gray-matter": "^4.0.2",
    "image-size": "^0.8.3",
    "install": "^0.13.0",
    "node-sass": "^4.14.1",
    "or": "^0.2.0",
    "postcss": "^7.0.32",
    "postcss-load-config": "^2.1.0",
    "prettier": "^2.0.5",
    "push-dir": "^0.4.1",
    "sapper": "git+https://git@github.com/bfanger/sapper.git#feature/no-subfolders",
    "sass": "^1.26.9",
    "svelte": "^3.24.1",
    "svelte-check": "^1.0.17",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^4.0.12",
    "three": "^0.119.1",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0"
  }
}
