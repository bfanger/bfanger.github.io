{
  "name": "bfanger.nl",
  "version": "3.0.0",
  "description": "",
  "homepage": "http://bfanger.nl/",
  "scripts": {
    "dev": "concurrently --kill-others 'npm run dev:jekyll' 'npm run dev:webpack'",
    "dev:jekyll": "bundle exec jekyll serve --source ./jekyll --host 0.0.0.0 --incremental --drafts",
    "dev:webpack": "webpack-dev-server -d --inline --hot --history-api-fallback --content-base _site --host 0.0.0.0 --color",
    "dev-fast-recompile": "webpack-dev-server -d --history-api-fallback --content-base _site --host 0.0.0.0",
    "clean": "rm -r jekyll/build;rm -r gh-pages/*",
    "deploy": "npm run clean; npm run deploy:webpack && npm run deploy:jekyll",
    "deploy:jekyll": "bundle exec jekyll build --source ./jekyll",
    "deploy:webpack": "NODE_ENV=production webpack --progress"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "gulp": "^3.9.1",
    "gulp-image": "^4.0.0",
    "gulp-responsive": "^2.8.0",
    "howler": "^2.0.5",
    "node-sass": "^4.5.3",
    "prettier": "^1.7.4",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  }
}
