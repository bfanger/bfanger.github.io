{
  "name": "bfanger.nl",
  "private": true,
  "scripts": {
    "dev": "sapper dev --no-hot",
    "test": "eslint src",
    "deploy": "sapper export --no-subfolders  && push-dir --dir __sapper__/export --branch=master"
  },
  "prettier": {
    "semi": false
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "plugins": [
      "svelte3",
      "prettier",
      "only-warn"
    ],
    "overrides": [
      {
        "files": [
          "**/*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "eslintIgnore": [
    "src/node_modules/*"
  ],
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "^1.0.0-next.10",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/runtime": "^7.7.7",
    "autoprefixer": "^9.7.3",
    "babel-eslint": "^10.0.3",
    "commonmark": "^0.29.1",
    "eslint": "^6.8.0",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "gray-matter": "^4.0.2",
    "image-size": "^0.8.3",
    "install": "^0.13.0",
    "node-sass": "^4.13.0",
    "or": "^0.2.0",
    "postcss": "^7.0.26",
    "postcss-load-config": "^2.1.0",
    "prettier": "^1.19.1",
    "push-dir": "^0.4.1",
    "sapper": "git+https://git@github.com/bfanger/sapper.git#feature/no-subfolders",
    "svelte": "^3.16.7",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^3.3.0",
    "three": "^0.112.1",
    "webpack": "^4.41.5"
  }
}
