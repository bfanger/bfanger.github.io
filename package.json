{
  "name": "bfanger-nl",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "deploy": "rimraf build && yarn build && git-directory-deploy --branch gh-pages --directory build/",
    "preview": "vite preview",
    "lint": "svelte-kit sync && concurrently --kill-others-on-fail \"yarn:lint:*\"",
    "lint:prettier": "prettier --check --loglevel=warn \"src/**/*.svelte\"",
    "lint:svelte-check": "svelte-check --fail-on-warnings --fail-on-hints",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint --ext=js,ts,svelte --max-warnings=0 src",
    "format": "prettier --write . && eslint --ext=js,ts,svelte --fix src",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --max-warnings 0 --ext ts,tsx --no-ignore",
      "sh -c 'tsc -p tsconfig.json --noEmit'"
    ],
    "*.js": [
      "eslint --max-warnings 0 --ext js --no-ignore"
    ],
    "*.svelte": [
      "eslint --max-warnings 0 --ext svelte --no-ignore",
      "svelte-check --fail-on-warnings --fail-on-hints",
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.1",
    "@sveltejs/kit": "^1.0.7",
    "@types/lodash-es": "^4.17.6",
    "@types/marked": "^4.0.8",
    "@types/three": "^0.148.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-triple": "^0.5.6",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.2",
    "prettier-plugin-svelte": "^2.9.0",
    "sass": "^1.57.1",
    "svelte-check": "^3.0.1",
    "svelte-preprocess": "^5.0.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "git-directory-deploy": "^1.5.1",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.3",
    "image-size": "^1.0.2",
    "lodash-es": "^4.17.21",
    "marked": "^4.2.5",
    "postcss-preset-env": "^7.8.3",
    "svelte": "^3.55.0",
    "three": "^0.148.0"
  }
}
