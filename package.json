{
  "name": "bfanger-nl",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "deploy": "rimraf build && yarn build && git-directory-deploy --branch gh-pages --directory build/",
    "preview": "vite preview",
    "lint": "svelte-kit sync && concurrently -c \"#c596c7\",\"#676778\",\"#4b32c3\",\"#fafafa\" --kill-others-on-fail \"npm:lint:*\"",
    "lint:prettier": "prettier --check .",
    "lint:svelte-check": "svelte-check --fail-on-warnings",
    "lint:eslint": "eslint --max-warnings=0",
    "lint:stylelint": "stylelint --max-warnings=0 \"src/**/*.{css,svelte}\"",
    "format": "eslint --fix && stylelint --fix \"src/**/*.{css,svelte}\" && prettier --write .",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,svelte}": [
      "svelte-check --fail-on-warnings"
    ],
    "*.{ts,svelte,js,cjs,mjs}": [
      "eslint --max-warnings 0 --no-ignore"
    ],
    "*.{ts,js,svelte,css,json,html}": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.8.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.9.0",
    "@types/three": "^0.169.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-svelte": "^2.46.0",
    "git-directory-deploy": "^1.5.1",
    "globals": "^15.12.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.6",
    "image-size": "^1.1.1",
    "lint-staged": "^15.2.10",
    "lodash-es": "^4.17.21",
    "marked": "^15.0.0",
    "postcss": "^8.4.47",
    "postcss-html": "^1.7.0",
    "postcss-preset-env": "^10.0.9",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "rimraf": "^6.0.1",
    "stylelint": "^16.10.0",
    "stylelint-config-clean-order": "^6.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.2",
    "svelte": "^5.1.13",
    "svelte-check": "^4.0.6",
    "tailwindcss": "^3.4.14",
    "three": "^0.170.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.4.10"
  },
  "engines": {
    "node": ">= 22"
  }
}
