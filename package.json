{
  "name": "bfanger.nl",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "dev": "HOST=0.0.0.0 PORT=8080 nuxt",
    "build": "nuxt generate",
    "lint": "eslint --ext .js,.vue --max-warnings 0 --ignore-path .gitignore .",
    "optimize-images": "node ./tasks/optimize-images.js"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "jest": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "recommended/esnext",
      "plugin:vue/recommended",
      "prettier"
    ],
    "plugins": [
      "vue",
      "only-warn"
    ],
    "rules": {
      "vue/max-attributes-per-line": "off",
      "import/no-extraneous-dependencies": "off"
    },
    "globals": {
      "process": true
    }
  },
  "devDependencies": {
    "@nuxtjs/sitemap": "^0.0.3",
    "@std/esm": "^0.25.2",
    "ascii-progress": "^1.0.5",
    "babel-eslint": "^8.2.2",
    "batch-promises": "^0.0.3",
    "eslint": "^4.18.2",
    "eslint-config-esnext": "^2.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-recommended": "^2.0.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-only-warn": "^1.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-vue": "^4.3.0",
    "imagemin": "^5.3.1",
    "imagemin-jpegoptim": "^5.2.0",
    "imagemin-pngquant": "^5.0.1",
    "node-sass": "^4.7.2",
    "nuxt": "^1.4.0",
    "prettier": "^1.11.1",
    "sass-loader": "^6.0.7"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "commonmark": "^0.28.1",
    "gray-matter": "^3.1.1",
    "lodash": "^4.17.5"
  }
}
