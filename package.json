{
  "name": "bfanger-nl",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "deploy": "rimraf build && yarn build && git-directory-deploy --branch gh-pages --directory build/",
    "preview": "vite preview",
    "lint": "svelte-kit sync && concurrently -c \"#c596c7\",\"#676778\",\"#4b32c3\",\"#fafafa\" --kill-others-on-fail \"npm:lint:*\"",
    "lint:prettier": "prettier --check .",
    "lint:svelte-check": "svelte-check --fail-on-warnings",
    "lint:eslint": "eslint --max-warnings=0",
    "lint:stylelint": "stylelint --max-warnings=0 \"src/**/*.{css,svelte}\"",
    "format": "eslint --fix && stylelint --fix \"src/**/*.{css,svelte}\" && prettier --write .",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,svelte}": [
      "svelte-check --fail-on-warnings"
    ],
    "*.{ts,svelte,js,cjs,mjs}": [
      "eslint --max-warnings 0 --no-ignore"
    ],
    "*.{ts,js,svelte,css,json,html}": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.0",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.42.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/typography": "^0.5.18",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.5.2",
    "@types/three": "^0.179.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-svelte": "^3.12.3",
    "git-directory-deploy": "^1.5.1",
    "globals": "^16.4.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "image-size": "^2.0.2",
    "lint-staged": "^16.1.6",
    "lodash-es": "^4.17.21",
    "marked": "^16.3.0",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-preset-env": "^10.3.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "stylelint": "^16.24.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-prettier": "^5.0.3",
    "svelte": "^5.39.3",
    "svelte-check": "^4.3.1",
    "tailwindcss": "^4.1.13",
    "three": "^0.179.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6"
  },
  "engines": {
    "node": ">= 22"
  }
}
