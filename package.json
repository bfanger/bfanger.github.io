{
  "name": "svelte-project-template",
  "private": true,
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "start": "svelte-kit start",
    "lint": "prettier --check --loglevel=warn 'src/**/*.svelte' && tsc --noEmit && svelte-check --fail-on-warnings --fail-on-hints && eslint --max-warnings 0 src",
    "format": "prettier --write 'src/**/*.svelte'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --max-warnings 0 --ext ts,tsx --no-ignore",
      "sh -c 'tsc -p tsconfig.json --noEmit'"
    ],
    "*.js": [
      "eslint --max-warnings 0 --ext js --no-ignore"
    ],
    "*.svelte": [
      "svelte-check --fail-on-warnings --fail-on-hints",
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.0-next.7",
    "@sveltejs/kit": "^1.0.0-next.93",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "commonmark": "^0.29.3",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-prettier": "^3.4.0",
    "gray-matter": "^4.0.3",
    "image-size": "^1.0.0",
    "lodash": "^4.17.21",
    "prettier": "~2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "sass": "^1.32.12",
    "svelte": "^3.37.0",
    "svelte-check": "^1.5.2",
    "svelte-preprocess": "^4.7.2",
    "three": "^0.128.0",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "vite": "^2.2.3"
  },
  "engines": {
    "node": ">= 12.17.0"
  }
}
