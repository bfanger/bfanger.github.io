{
  "name": "svelte-project-template",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "deploy": "rimraf build && yarn build && ./githubify.js && git-directory-deploy --branch gh-pages --directory build/",
    "preview": "svelte-kit preview",
    "lint": "prettier --check --loglevel=warn 'src/**/*.svelte' && tsc --noEmit && svelte-check --fail-on-warnings --fail-on-hints && eslint --max-warnings 0 src",
    "format": "prettier --write 'src/**/*.svelte'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --max-warnings 0 --ext ts,tsx --no-ignore",
      "sh -c 'tsc -p tsconfig.json --noEmit'"
    ],
    "*.js": [
      "eslint --max-warnings 0 --ext js --no-ignore"
    ],
    "*.svelte": [
      "svelte-check --fail-on-warnings --fail-on-hints",
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.0-next.17",
    "@sveltejs/kit": "^1.0.0-next.158",
    "@types/lodash": "^4.14.172",
    "@types/lodash-es": "^4.17.4",
    "@types/three": "^0.131.0",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^3.4.1",
    "lint-staged": "^11.1.2",
    "prettier": "~2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "sass": "^1.38.1",
    "svelte-check": "^2.2.5",
    "svelte-preprocess": "^4.8.0",
    "three": "^0.132.2",
    "tslib": "^2.3.1",
    "typescript": "4.3",
    "vite": "^2.5.1"
  },
  "engines": {
    "node": ">= 12.17.0"
  },
  "dependencies": {
    "commonmark": "^0.30.0",
    "git-directory-deploy": "^1.5.1",
    "gray-matter": "^4.0.3",
    "image-size": "^1.0.0",
    "lodash-es": "^4.17.21",
    "svelte": "^3.42.3"
  }
}
